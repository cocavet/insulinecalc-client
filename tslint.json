{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "src"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "no-string-literal": false,
        "new-parens": true,
        "object-literal-sort-keys": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}